<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IQB.Views.AdminManagement.AddStaffMember"
             xmlns:xfg="clr-namespace:XFGloss;assembly=XFGloss"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:behavior="clr-namespace:IQB.ControlBehaviors;assembly=IQB"
             xmlns:custom="clr-namespace:IQB.CustomControl"
             BackgroundColor="Black"
             xmlns:ffimg="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:fftrans="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             xmlns:syncfusion="clr-namespace:Syncfusion.XForms.Accordion;assembly=Syncfusion.Expander.XForms"
             xmlns:forms="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:sync="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms">
    <NavigationPage.TitleView>
        <Grid VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ffimageloadingsvg:SvgCachedImage Source="resource://IQB.Resources.Image.addIcon1.svg" HorizontalOptions="End" Margin="0,0,15,0" Grid.Column="1" WidthRequest="20" HeightRequest="20">
                <ffimg:CachedImage.Transformations>
                    <fftrans:TintTransformation HexColor="#FFFFFF" EnableSolidColor="true"/>
                </ffimg:CachedImage.Transformations>
            </ffimageloadingsvg:SvgCachedImage>
            <Label Text="Mange Staff" x:Name="HeaderText" TextColor="{DynamicResource AppForeground}" FontSize="16" VerticalTextAlignment="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="WidthRequest" Value="70" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HeightRequest" Value="75" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
            </Style>
            <Style x:Key="TextBorderstyle" TargetType="BoxView">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="Color" Value="Black" />
                <Setter Property="HeightRequest" Value="1"/>
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style x:Key="BoxViewStyle" TargetType="BoxView">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="Color" Value="Black" />
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="Margin" Value="0,-18,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition  Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <ScrollView Padding="20,0" Grid.Row="0">

                <syncfusion:SfAccordion>

                    <syncfusion:SfAccordion.Items>

                        <syncfusion:AccordionItem IconColor="{DynamicResource AppPrimary}" HeaderBackgroundColor="Transparent">

                            <syncfusion:AccordionItem.Header>
                                <Label TextColor="White" x:Name="ProfileHeader" Text="Update Profile" BackgroundColor="Black" HeightRequest="50" VerticalTextAlignment="Center"/>
                            </syncfusion:AccordionItem.Header>

                            <syncfusion:AccordionItem.Content>

                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="110"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <controls:CircleImage Grid.Row="0" HeightRequest="110" WidthRequest="110" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" Source="{Binding ProfileImage}" BorderThickness="1" BorderColor="WhiteSmoke" Aspect="AspectFill">

                                        <controls:CircleImage.GestureRecognizers>

                                            <TapGestureRecognizer Command="{Binding AddMemberPictureCommand}" NumberOfTapsRequired="1" />

                                        </controls:CircleImage.GestureRecognizers>

                                    </controls:CircleImage>

                                    <forms:SvgCachedImage  Grid.Row="0" Source="resource://IQB.Resources.Image.ProfileCamera.svg" Margin="80,0,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" HeightRequest="35" WidthRequest="35" >
                                        <!--<forms1:CachedImage.Transformations>
                                <transformations:TintTransformation HexColor="#FFFFFF" EnableSolidColor="true"/>
                            </forms1:CachedImage.Transformations>-->
                                    </forms:SvgCachedImage>

                                    <StackLayout Grid.Row="1" x:Name="BarberEditProfile"  Spacing="15">

                                        <Label TextColor="{DynamicResource AppPrimary}" Text="Full Name"/>

                                        <custom:BorderlessEntry Placeholder="Full Name"
                                                HorizontalOptions="FillAndExpand"
                                        Style="{DynamicResource EditProfileTextboxStyle}"
                                        Text="{Binding FullName, Mode=TwoWay}" 
                                       >
                                        </custom:BorderlessEntry>

                                        <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                        <Label TextColor="{DynamicResource AppPrimary}" Text="Preffered Name"/>

                                        <custom:BorderlessEntry Placeholder="Preffered Name"
                                                HorizontalOptions="FillAndExpand"
                                        Style="{DynamicResource EditProfileTextboxStyle}"
                                        Text="{Binding PreferredName, Mode=TwoWay}" 
                                       >
                                        </custom:BorderlessEntry>

                                        <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                            <Label TextColor="{DynamicResource AppPrimary}" Text="Employee Code"/>

                                            <custom:BorderlessEntry Placeholder="Employee Code"
                                                HorizontalOptions="FillAndExpand"
                                        Style="{DynamicResource EditProfileTextboxStyle}"
                                        Text="{Binding EmployeePasscode, Mode=TwoWay}" 
                                       >
                                        </custom:BorderlessEntry>

                                        <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                        <Label TextColor="{DynamicResource AppPrimary}" Text="Mail Address"/>

                                        <custom:BorderlessEntry Placeholder="Email Address"
                                        Style="{DynamicResource EditProfileTextboxStyle}"
                                        Text="{Binding EmailAddress, Mode=TwoWay}" 
                                       >
                                        </custom:BorderlessEntry>

                                        <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                        <Label TextColor="{DynamicResource AppPrimary}" Text="Estimated Wait Time"/>

                                        <custom:BorderlessEntry Keyboard="Numeric" Placeholder="Estimated Wait Time"
                                        Style="{DynamicResource EditProfileTextboxStyle}"
                                        Text="{Binding Estimatedwaittime, Mode=TwoWay}" 
                                       >
                                        </custom:BorderlessEntry>

                                        <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                            <StackLayout Orientation="Horizontal">
                                                <Label HorizontalOptions="StartAndExpand" TextColor="{DynamicResource AppPrimary}"  Text="Available For Appointments "/>

                                                <sync:SfSwitch   
                                                                 AllowIndeterminateState="False" IsOn="{Binding IsAvailableForAppointments}" 
                                                                 VisualType="Custom" HorizontalOptions="End" VerticalOptions="CenterAndExpand" 
                                                                 >
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup  x:Name="CommonStates">

                                                            <VisualState x:Name="On">
                                                                <VisualState.Setters>
                                                                    <Setter Property="SwitchSettings">
                                                                        <Setter.Value>
                                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:OnState" 
                                 ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppForeground}" 
                                TrackBorderColor="{DynamicResource AppPrimary}" TrackColor="{DynamicResource AppPrimary}"
                                  />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </VisualState.Setters>
                                                            </VisualState>

                                                            <VisualState x:Name="Off">
                                                                <VisualState.Setters>
                                                                    <Setter Property="SwitchSettings">
                                                                        <Setter.Value>
                                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:OffState" 
                                ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppPrimary}" 
                                TrackBorderColor="{DynamicResource AppHintText}" TrackColor="{DynamicResource AppHintText}"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </VisualState.Setters>
                                                            </VisualState>

                                                            <!--<VisualState x:Name="Indeterminate">
                                                <VisualState.Setters>
                                                    <Setter Property="SwitchSettings">
                                                        <Setter.Value>
                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:IndeterminateState" 
                                 ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppPrimary}" 
                                TrackBorderColor="{DynamicResource AppPrimary}" TrackColor="{DynamicResource AppBackground}"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </VisualState.Setters>
                                            </VisualState>-->




                                                        </VisualStateGroup>

                                                    </VisualStateManager.VisualStateGroups>

                                                </sync:SfSwitch>

                                            </StackLayout>

                                            <BoxView HeightRequest="1" Margin="0,5,0,10" BackgroundColor="{DynamicResource AppPrimary}"/>

                                        </StackLayout>

                                </Grid>

                            </syncfusion:AccordionItem.Content>

                        </syncfusion:AccordionItem>

                        <syncfusion:AccordionItem IconColor="{DynamicResource AppPrimary}" HeaderBackgroundColor="Transparent">

                            <syncfusion:AccordionItem.Header>
                                <Label x:Name="ServicesHeader" BackgroundColor="Black" TextColor="White" FontAttributes="Bold" Text="Update Services" HeightRequest="50" VerticalTextAlignment="Center"/>
                            </syncfusion:AccordionItem.Header>

                            <syncfusion:AccordionItem.Content>
                                    <!--<ScrollView x:Name="ServiceStack">-->

                                <Grid x:Name="ServiceStack">
                                      <ListView ItemAppearing="ServicesListView_ItemAppearing" x:Name="ServicesListView" Footer="" SeparatorVisibility="None" BackgroundColor="{DynamicResource AppBackground}" Margin="0,10" ItemTapped="ServiceListViewItemTapped" RowHeight="120" ItemsSource="{Binding BrResult}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <ViewCell>
                                                        <StackLayout Padding="10" HeightRequest="120">

                                                            <StackLayout Orientation="Horizontal">
                                                                <Label TextColor="White" Text="{Binding ServiceName}" HorizontalOptions="StartAndExpand"/>
                                                                <!--<Switch IsToggled="{Binding IsToggled}" VerticalOptions="CenterAndExpand" IsEnabled="{Binding SwitchIsEnabled}"  HorizontalOptions="End"/>-->

                                                                <sync:SfSwitch   
                                                                 AllowIndeterminateState="False" IsOn="{Binding IsToggled}" 
                                                                 IsEnabled="{Binding SwitchIsEnabled}" VisualType="Custom" HorizontalOptions="End" VerticalOptions="CenterAndExpand" 
                                                                 >
                                                                    <VisualStateManager.VisualStateGroups>
                                                                        <VisualStateGroup  x:Name="CommonStates">



                                                                            <VisualState x:Name="On">
                                                                                <VisualState.Setters>
                                                                                    <Setter Property="SwitchSettings">
                                                                                        <Setter.Value>
                                                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:OnState" 
                                 ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppForeground}" 
                                TrackBorderColor="{DynamicResource AppPrimary}" TrackColor="{DynamicResource AppPrimary}"
                                  />
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </VisualState.Setters>
                                                                            </VisualState>

                                                                            <VisualState x:Name="Off">
                                                                                <VisualState.Setters>
                                                                                    <Setter Property="SwitchSettings">
                                                                                        <Setter.Value>
                                                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:OffState" 
                                ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppPrimary}" 
                                TrackBorderColor="{DynamicResource AppHintText}" TrackColor="{DynamicResource AppHintText}"/>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </VisualState.Setters>
                                                                            </VisualState>

                                                                            <!--<VisualState x:Name="Indeterminate">
                                                <VisualState.Setters>
                                                    <Setter Property="SwitchSettings">
                                                        <Setter.Value>
                                                            <sync:DefaultSwitchSettings x:TypeArguments="sync:IndeterminateState" 
                                 ThumbBorderColor="{DynamicResource AppPrimary}" ThumbColor="{DynamicResource AppPrimary}" 
                                TrackBorderColor="{DynamicResource AppPrimary}" TrackColor="{DynamicResource AppBackground}"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </VisualState.Setters>
                                            </VisualState>-->




                                                                        </VisualStateGroup>

                                                                    </VisualStateManager.VisualStateGroups>

                                                                </sync:SfSwitch>




                                                            </StackLayout>

                                                            <StackLayout HeightRequest="35" Spacing="15" Orientation="Horizontal">
                                                                <Label WidthRequest="80" VerticalOptions="CenterAndExpand" TextColor="Gray" Text="{Binding Price}"/>
                                                                <BoxView Margin="5" WidthRequest="1" BackgroundColor="Gray" HeightRequest="30"/>

                                                                <forms:SvgCachedImage VerticalOptions="CenterAndExpand" Source="resource://IQB.Resources.Image.HEstWaitTime.svg" HeightRequest="30" WidthRequest="30" />

                                                                <custom:BorderlessEntry FontSize="14" Keyboard="Numeric" VerticalOptions="Center" PlaceholderColor="Gray" BackgroundColor="Transparent" TextColor="White" Text="{Binding ServiceIdTime}" Placeholder="Service Time"/>

                                                            </StackLayout>

                                                            <BoxView HeightRequest="1" BackgroundColor="Gray" VerticalOptions="EndAndExpand"/>

                                                        </StackLayout>
                                                    </ViewCell>
                                                </DataTemplate>

                                            </ListView.ItemTemplate>
                                       
                                        
                                      </ListView>
                             
                               
                                </Grid>
                                <!--</ScrollView>-->
                            </syncfusion:AccordionItem.Content>

                        </syncfusion:AccordionItem>

                    </syncfusion:SfAccordion.Items>

                </syncfusion:SfAccordion>
                
            </ScrollView>
            
            <StackLayout Grid.Row="1" BackgroundColor="{StaticResource AppPrimary}">
                <Label  x:Name="ButtonText" FontAttributes="Bold" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AddMemberCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
        
        </Grid>
            <Grid x:Name="indicator" BackgroundColor="White" Opacity="0.75" IsVisible="{Binding IsVisible}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <ActivityIndicator WidthRequest="50" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="True" IsRunning="True"></ActivityIndicator>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
