<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>

    <!--Button text in lowercase-->
    <!--<item name="android:textAllCaps">false</item>-->

    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#2196F3</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <!--<item name="colorPrimaryDark">#ffffff</item>-->.

    <item name="colorPrimaryDark">#000000</item>



    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <!--<item name="colorAccent">#FF4081</item>-->
    <item name="colorAccent">#0DA5B7</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="android:colorPressedHighlight">@color/ListViewSelected</item>
    <item name="android:colorLongPressedHighlight">@color/ListViewHighlighted</item>
    <item name="android:colorFocusedHighlight">@color/ListViewSelected</item>
    <item name="android:colorActivatedHighlight">@color/ListViewSelected</item>
    <item name="android:activatedBackgroundIndicator">@color/ListViewSelected</item>

    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:buttonStyle">@style/NoShadowButton</item>


  </style>
  <style name="NoShadowButton" parent="android:style/Widget.Button">
    <item name="android:stateListAnimator">@null</item>
  </style>
  <color name="ListViewSelected">#dee0e3</color>
  <color name="ListViewHighlighted">#3A3B3B</color>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <!--<item name="android:background">@color/colorSecondary</item>-->
    <item name="colorAccent">#0DA5B7</item>
    <!--<item name="android:headerBackground">@color/colorAccent</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/colorWhite</item>
    <item name="android:dayOfWeekBackground">@color/colorWhite</item>
    <item name="android:weekDayTextAppearance">@color/colorWhite</item>-->
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.Light">
    <item name="android:windowBackground">@drawable/splashscreenimg</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name = "DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#ffffff</item>
  </style>
</resources>